<div class="card p-3 m-2 publication-box">
  <h5><%= publication.title %></h5>
  <p>Autor: <%= publication.user.name %></p>
  <p><%= publication.content %></p>
  <div class="row">
    <%#= link_to 'Show', publication, class: 'btn btn-outline-info mx-2' %>
    <%= link_to 'Editar', edit_publication_path(publication), class: 'btn btn-outline-warning mx-2' %>
    <%= link_to 'Excluir', publication, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger mx-2' %>
  </div>

  <div id="new-comment-container<%= publication.id %>">
    <%= render 'comments/form', comment: Comment.new, publication_id: publication.id %>
  </div>
  <div id="comments-container<%= publication.id %>">
    <%= render publication.comments %>
  </div>

</div>